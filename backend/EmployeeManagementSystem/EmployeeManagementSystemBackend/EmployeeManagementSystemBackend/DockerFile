# Use a base image with Java 17 installed
FROM openjdk:17-jdk-slim

# Set the working directory inside the container
WORKDIR /app

# Copy the project files into the container
COPY . /app

# Add Maven Wrapper files
ADD https://github.com/takari/maven-wrapper/archive/maven-wrapper-0.5.6.tar.gz /app
RUN tar -xvf maven-wrapper-0.5.6.tar.gz
RUN rm maven-wrapper-0.5.6.tar.gz

# Build the application
RUN ./mvnw clean package -DskipTests

# Expose the port on which the application will run
EXPOSE 8888

# Set the command to run the application
CMD ["java", "-jar", "./target/EmployeeManagementSystemBackend-0.0.1-SNAPSHOT.jar"]
